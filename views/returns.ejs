<html>
    <head>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link href="/stylesheets/warehouse.css"  rel="stylesheet" type="text/css" />
        <script src="/javascripts/warehouse.js" type="text/javascript"></script>
        <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="message">
            <% if(message.length) { %>
                <div class="alert alert-success">
                    <%= message %>
                </div>
            <% }%>
        </div> 

        <div class="btn-group-wrapper"> 
            <div class="btn-group">
            <form action="/">
                <input type="submit" value="Magazyn">
            </form>
    
            <form action="/products">
                <input type="submit" value="Produkty">
            </form>
    
            <form action="/categories">
                <input type="submit" value="Kategorie">
            </form>
    
            <form action="/orders">
                <input type="submit" value="Zamówienia">
            </form>
        
            <form action="/ordersContents">
                <input type="submit" value="Zawartość Zamówień">
            </form>
            
            <form action="/returns">
                <input type="submit" value="Zwroty">
            </form>
    
            <form action="/complaints">
                <input type="submit" value="Reklamacje">
            </form>
        </div>

        <div class="tab-wrapper"> 
            <div class="tab-body-wrapper">
                <div class="tab-body2" id="tab2">
                    <table class="table">
                        <thead>
                        <tr>
                            <th></th>
                            <th>ID ZAMÓWIENIA</th>
                            <th>ID PRODUKTU</th>
                            <th>STAN</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <form action='/add' method="post">
                                <td><label type="hidden" size="5"/></td>
                                <td><input name="zwrot" size="5"/></td>
                                <td><input name="zwrot" size="5"/></td>
                                <td>
                                    <select name="zwrot" siez="5">
                                            <% if(states.length){
                                                for(var i = 0; i< states.length; i++) {%>  
                                                    <option> <%=states[i].NAZWA_STANU%></option>
                                                <% }
                                            }%>  
                                    </select>
                                </td>
                                <td><input type="submit" value="Add!"></td>  
                            </form>
                        </tr> 
                        </tbody>
                    </table>
                </div>

                <div class="tab-body" id="tab1">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>ID ZAMÓWIENIA</th>
                            <th>ID PRODUKTU</th>
                            <th>STAN</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% if(warehouse.length){
                        for(var i = 0; i< warehouse.length; i++) {%>  
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><label> <%=warehouse[i].ZAMÓWIENIA_ZAMÓWIENIE_ID%> </label></td>
                            <td><label> <%=warehouse[i].ZAMÓWIENIA_PRODUKT_ID%> </label></td>
                            <td><label> <%=warehouse[i].NAZWA_STANU%> </label></td>
                            <td><button type="button" id ='<%= i %>' onclick="editRow('<%= i %>')">Edit!</button></td>  
                        </tr>

                        <% }
                                
                        }else{ %>
                            <tr>
                                <td colspan="3">No data</td>
                            </tr>
                            <% } %>    
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div id="states">
            <% if(states.length){
                for(var i = 0; i< states.length; i++) {%>  
                    <label><%=states[i].NAZWA_STANU%></label>
                <% }
            }%>  
        </div>
    </body>
</html>